 */
function gallery_assist_get_assignments($all = FALSE) {
  $assignments = array();
  $types = node_get_types('names');

  if (!$all) {
    unset($types['gallery_assist']);
  }
  foreach ($types as $type => $name) {
    if (variable_get('gallery_assist_'. $type, 0) == 1) {
      $assignments[$type] =  $name;
    }
  }

  return $assignments;
}

/**
 * Build path aliases to gallery_assist items in case pathautho is used.
 *
 * @param object $node
 *   A Object containing nid and language.
 * @param integer $pid
 *   A Integer containing the identifier of a gallery item.
 * @param string $ptitle
 *   A String containing the gallery picture title.
 * @param string $op
 *   A String containing the task.
 *
 * @see gallery_assist_save().
 * @see gallery_assist_save_one_submit().
 * @see gallery_assist_save_one_submit().
 */
function gallery_assist_build_aliases(&$node, $pid, $ptitle = NULL, $op = NULL) {
  if (empty($op)) {
    drupal_set_message("Can't execute any operation because opetatpr is missing");
    return;
  }

  $done = FALSE;
  $existing = 0;
  module_load_include('inc', 'pathauto', 'pathauto');
  if (empty($ptitle)) {
    $ptitle = $pid;
  }
  $ptitle = pathauto_cleanstring($ptitle);
  $aid = db_result(db_query("SELECT pid FROM {url_alias} WHERE src = '%s'", "node/{$node->nid}/$pid"));

  if (empty($aid)) {
    $insert_data = array(
      'src' => 'node/'. $node->nid .'/'. $pid,
      'dst' => drupal_get_path_alias('node/'. $node->nid) .'/'. $ptitle .'-'. $pid,
      'language' => $node->language,
    );

    db_query("INSERT INTO {url_alias} (src, dst, language) VALUES ('%s', '%s', '%s')", $insert_data);
    $last_id = db_last_insert_id('url_alias', 'pid');
    db_query("UPDATE {gallery_assist_item} SET aid = %d WHERE pid = %d", $last_id, $pid);
  }
  else {
    switch ($op) {
      case 'update':
        $update_data = array(
          'dst' => drupal_get_path_alias('node/'. $node->nid) .'/'. $ptitle .'-'. $pid,
          'language' => $node->language,
          'pid' => $aid
        );
        db_query("UPDATE {url_alias} SET dst = '%s', language = '%s' WHERE pid = %d", $update_data);
        break;

      case 'delete':
        db_query("DELETE FROM {url_alias} WHERE pid = %d", $aid);
        break;
    }
  }
}

