    // Menu trail.
    $lattr = array();
    if ((arg(0) == 'node' && is_numeric(arg(1)) && arg(1) == $r->nid)
         || (arg(0) == 'node' && arg(2) == 'edit' && is_numeric(arg(1)) && arg(1) == $r->nid)
               || (arg(1) == 'ga_edit_one' && is_numeric(arg(2)) && arg(2) == $r->nid)
               || (arg(1) == "ga_edit_one_{$r->type}" && is_numeric(arg(2)) && arg(2) == $r->nid)
